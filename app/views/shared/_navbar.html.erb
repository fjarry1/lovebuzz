<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="w-100 row mx-0">
    <div class="col-4 d-flex justify-content-start align-items-center"> <% if action_name == "show" && controller_name == "matches" %>
      <%= link_to matches_path do %>
        <img src="https://res.cloudinary.com/ddat564z1/image/upload/v1662034166/navbar2_bz1nie.png" alt="">
      <% end %>
    <% end %>
    </div>
    <div class="col-4 d-flex justify-content-center">
      <%= link_to home_path, class: "navbar-brand me-0" do %>
        <%= image_tag "https://res.cloudinary.com/ddat564z1/image/upload/v1662033727/logo-02_jj2k5t.png" %>
      <% end %>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <div class="" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= cl_image_tag current_user.photos.first.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "My profile", profil_path(current_user), class: "dropdown-item" %>
                <%= link_to "My match preference", user_show_preference_path(current_user), class: "dropdown-item"%>
                <%= link_to "Edit my profile", edit_user_registration_path(current_user), class: "dropdown-item" %>
                <%= link_to "Desactivate my account", availability_path(current_user), class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
