<% if user_signed_in? %>
  <% unless @title.nil? && @artist.nil? %>
    <div class="currently-playing">
      <%# <div class="icon-spotify"> %>
        <%# <img src="https://res.cloudinary.com/ddat564z1/image/upload/v1662111081/logo-spotify_irugym.png" alt=""> %>
      <%# </div> %>
      <div class="player w-100 d-flex">
        <i class="fa-brands fa-spotify logo-spotify" style="font-size: 40px"></i>
        <div class="song-title-player w-100">
          <span> <%= @title %></span> - <span><%= @artist %></span>
        </div>
      </div>
    </div>
  <% end %>
  <div class="footer fixed-bottom">
    <div class="footer-links">
      <%= link_to profil_path(current_user) do %>
       <i class="fa-solid fa-user" style="color:#50555C; opacity:0.5"></i>
      <% end %>
      <%# redirige vers l'index des matches %>
      <%= link_to matches_path do %>
        <i class="fa-solid fa-heart" style="color:#50555C; opacity:0.5"></i>
      <% end %>
      <%# redirige vers ? %>
      <i class="fa-solid fa-bars" style="font-size:40px; color:#50555C; opacity:0.5"></i>
      <%# <i class="fa-solid fa-ellipsis" style="font-size:40px; color:white"></i> %>
    </div>
  </div>
<% end %>
