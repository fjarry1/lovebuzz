<div class="h-100 overflowy">
  <div class="description">
  <h1>Hello, I'm <%=@user.first_name.capitalize%> <%=@user.last_name.capitalize%> and I'm <%=@user.age%> years old!</h1>
    <h5>I live in Paris</h5>
    </div>
      <div id="carouselExampleControls" class="carousel slide mb-2" data-bs-ride="carousel">
        <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @user.photos.first.key, height: 300, gravity: :face, class: 'img-caroussel' %>
        </div>
          <%@user.photos.drop(1).each do |photo|%>
        <div class="carousel-item">
          <%=cl_image_tag photo.key, height: 300, gravity: :face, class: 'img-caroussel' %>
        </div>
          <% end %>
        </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>
  <div class="description">
  <h3 class="my-3">Who am I?<h3>
    <p class="fs-6"><%=@user.description%></p>
  <h3 class="my-3">Music Tastes<h3>
    <p class="fs-6"><%=@user.music_tastes%></p>
  </div>
  <div class="card-match mb-5">
    <div><%= link_to(no_match_path(@user.id), method: :post) do%>
              <i class="fa-solid fa-circle-xmark" style="color: #D61C4E; font-size: 45px;"></i>
            <% end %>
      </div>
      <div ><%= link_to(new_match_or_match_favorable_path(@user.id), method: :post) do%>
              <i class="fa-solid fa-circle-check" style="color: #D61C4E; font-size: 45px;"></i>
            <% end %>
      </div>
    </div>
  </div>
</div>
