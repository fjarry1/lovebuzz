<div class="d-flex justify-content-start ps-3 pt-3 pb-4">
  <h1 style="font-size:42px">Conversations</h1>
</div>

  <div class="container">
    <div class="card-chat">
      <% @matches.each do |match| %>
        <%= link_to match_path(match) do %>
          <div class="card-match-list mb-2">
            <% if match.user_1 == current_user %>
              <%= cl_image_tag match.user_2.photos.first.key %>
            <% else %>
              <%= cl_image_tag match.user_1.photos.first.key %>
            <% end %>
            <div class="card-match-list-infos" style="color:black; font-weight:bolder">
              <%= match.interlocutor_of(current_user).full_name %>
              <p style="color:$gris"><%= match.messages.last&.content&.truncate(40) %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
